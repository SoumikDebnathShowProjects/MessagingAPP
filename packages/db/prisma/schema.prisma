generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
  photo    String?
  rooms    Room[]
  chats    chat[]
}

model Room {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  createdAt DateTime @default(now())
  adminId   Int
  admin     User     @relation(fields: [adminId], references: [id])
  chats     chat[]
}

model chat {
  id      Int    @id @default(autoincrement())
  roomId  Int
  userId  Int
  message String
  room    Room   @relation(fields: [roomId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
}
